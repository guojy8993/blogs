                uid=>1001,
                ensure=>present,
                name=>"test",
                comment=>"user created by puppet",
                gid=>1001,
                home=>"/home/test",
                managehome=>true,
                password=>"test",
                password_max_age=>365,
                password_min_age=>10,
}
...

